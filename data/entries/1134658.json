; x < size; x++){\n        for (y = 0; y < size; y++){\n          elems[x + \",\" + y].className = array[index++] ? \"alive\" : \"\";\n        }\n      }\n      setTimeout(play, 10);\n    }\n    play();\n  </script>\n</body>","size":1369,"raw_url":"https://gist.github.com/raw/1134658/1fdebac03b04af71f528b806ac6c1feb3fa652e0/test.html","filename":"test.html"},"package.json":{"content":"{\n  \"name\": \"gameOfLife\",\n\n  \"description\": \"Implementation of Conway's Game of Live.\",\n\n  \"keywords\": [\n    \"conway\",\n    \"game\",\n    \"life\",\n    \"cellular\",\n    \"automaton\"\n  ]\n}","size":180,"raw_url":"https://gist.github.com/raw/1134658/a3c216c411fc3223f538386e00041333702c3002/package.json","filename":"package.json"}},"user":{"url":"https://api.github.com/users/aemkei","login":"aemkei","avatar_url":"https://secure.gravatar.com/avatar/0d9da77bb99bea710cbf711ed08e57d7?d=https://a248.e.akamai.net/assets.github.com%2Fimages%2Fgravatars%2Fgravatar-140.png","id":1521},"html_url":"https://gist.github.com/1134658","url":"https://api.github.com/gists/1134658","description":"Game of Life - 140byt.es","public":true,"comments":6,"history":[{"user":{"url":"https://api.github.com/users/aemkei","login":"aemkei","avatar_url":"https://secure.gravatar.com/avatar/0d9da77bb99bea710cbf711ed08e57d7?d=https://a248.e.akamai.net/assets.github.com%2Fimages%2Fgravatars%2Fgravatar-140.png","id":1521},"url":"https://api.github.com/gists/1134658/4f2d65447b0732c76538eefa7b474c8420304cb5","change_status":{"deletions":4,"additions":4,"total":8},"committed_at":"2011-08-15T10:19:32Z","version":"4f2d65447b0732c76538eefa7b474c8420304cb5"},{"user":{"url":"https://api.github.com/users/aemkei","login":"aemkei","avatar_url":"https://secure.gravatar.com/avatar/0d9da77bb99bea710cbf711ed08e57d7?d=https://a248.e.akamai.net/assets.github.com%2Fimages%2Fgravatars%2Fgravatar-140.png","id":1521},"url":"https://api.github.com/gists/1134658/79e31e504aec98952ea8fe36b7d4833967168769","change_status":{"d